<link rel="stylesheet" href="~/Content/signature-pad.css">

<div class="jumbotron">
    <h1>Glasaj dijasporo</h1>
</div>
<div class="row">
    <h2>Licni podaci</h2>
    <form class="form-container" action="/api/service/" method="post" id="applicationForm">
        <div class="form-title">Ime i prezime</div>
        <input class="form-field" type="text" name="FirstLastName" /><br />

        <div class="form-title">Datum i mesto rodjenja</div>
        <input class="form-field" type="text" name="BirthPlaceDate" /><br />
        
        <div class="form-title">Pol</div>
        <input class="form-field" type="text" name="Gender" /><br />
        
        <div class="form-title">Ime jednog od roditelja</div>
        <input class="form-field" type="text" name="ParentName" /><br />
        
        <div class="form-title">JMBG</div>
        <input class="form-field" type="text" name="PersonalId" /><br />
        
        <div class="form-title">Broj pasosa</div>
        <input class="form-field" type="text" name="PassportId" /><br />
        
        <div class="form-title">Adresa prebivalista u Srbiji</div>
        <input class="form-field" type="text" name="HomeCountryAddress" /><br />
        
        <div class="form-title">Adresa prebivalista za internno raseljena lica</div>
        <input class="form-field" type="text" name="TemporaryAddress" /><br />
        
        <div class="form-title">Naziv strane drzave</div>
        <input class="form-field" type="text" name="ForeignCountryName" /><br />
        
        <div class="form-title">Adresa u inostranstvu</div>
        <input class="form-field" type="text" name="ForeignCountryAddress" /><br />
        
        <div class="form-title">Mesto glasanja</div>
        <input class="form-field" type="text" name="VotingLocation" /><br />

        <div class="form-title">Trenutni grad u kome se nalazite</div>
        <input class="form-field" type="text" name="CurrentLocation" /><br />

        <div class="form-title">Broj telefona</div>
        <input class="form-field" type="text" name="PhoneNumber" /><br />

        <div class="form-title">Email</div>
        <input class="form-field" type="text" name="Email" /><br />

        <input type="hidden" name="Signature" id="Signature" /><br />
        
        <div class="submit-container">
            <input class="submit-button" id="submitApplication" type="submit" value="Prijavi se" />
        </div>
        <div id="signature-pad" class="m-signature-pad">
            <div class="m-signature-pad--body">
                <canvas id="signatureCanvas"></canvas>
            </div>
            <div class="m-signature-pad--footer">
                <div class="description">Potpis</div>
                <div class="left">
                    <button type="button" class="button clear" data-action="clear">Obrisi</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script src="~/Scripts/signature_pad.min.js"></script>
<script src="~/Scripts/app.js"></script>


